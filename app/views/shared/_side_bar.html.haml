      .side__item__name
        = current_user.name
      .side__item__icon
        =link_to  new_group_path,  class:"side__item--edit" do
          %i.far.fa-edit
          %span<>
        =link_to  edit_user_path(current_user),  class:"side__item--gear" do
          %i.fa.fa-cog
          %span<>
